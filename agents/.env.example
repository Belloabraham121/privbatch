# ─── Agent Configuration ───────────────────────────────────────
# These environment variables configure a PrivBatch trading agent.
# Copy this file to .env and fill in the values.

# Agent identity
AGENT_ID=agent-1

# Wallet (NEVER commit your private key to version control)
AGENT_WALLET_ADDRESS=0xYourWalletAddress
AGENT_WALLET_PRIVATE_KEY=0xYourPrivateKeyHere

# Strategy
# Options: momentum, arbitrage, liquidity, mean-reversion
AGENT_STRATEGY_NAME=momentum

# Contract addresses (Base Sepolia)
AGENT_HOOK_ADDRESS=0xYourPrivBatchHookAddress
AGENT_POOL_MANAGER_ADDRESS=0x05E73354cFDd6745C338b50BcFDfA3Aa6fA03408

# RPC
AGENT_RPC_URL=https://sepolia.base.org
AGENT_CHAIN_ID=84532

# ─── Commitment Settings ──────────────────────────────────────
# Deadline offset in seconds (default: 3600 = 1 hour)
AGENT_DEADLINE_OFFSET=3600
# Minimum commitments required to trigger a batch (default: 2)
AGENT_MIN_COMMITMENTS=2
# Batch interval in seconds (default: 300 = 5 minutes)
AGENT_BATCH_INTERVAL=300

# ─── Monitoring Settings ─────────────────────────────────────
# How often to poll for market data (ms, default: 30000 = 30s)
AGENT_POLL_INTERVAL=30000
# Maximum retry attempts for failed operations (default: 3)
AGENT_MAX_RETRIES=3
# Delay between retries in ms (default: 5000)
AGENT_RETRY_DELAY=5000

# ─── Trading Settings ────────────────────────────────────────
# Maximum amount per trade (in wei / smallest unit)
AGENT_MAX_AMOUNT_IN=10000000000000000000
# Minimum amount per trade (in wei / smallest unit)
AGENT_MIN_AMOUNT_IN=1000000000000000000
# Default slippage tolerance in basis points (50 = 0.5%)
AGENT_DEFAULT_SLIPPAGE_BPS=50

# ─── Token Addresses (for reference / use in scripts) ────────
# Mock USDC (6 decimals) on Base Sepolia
MOCK_USDC_ADDRESS=0x98346718c549Ed525201fC583796eCf2eaCC0aD5
# Mock USDT (18 decimals) on Base Sepolia
MOCK_USDT_ADDRESS=0x0Ea67A670a4182Db6eB18A6aAbC0f75195ef2EfC

# ─── ZK Configuration (optional, for ZK-enhanced agents) ─────
# Path to circuit WASM
ZK_CIRCUIT_WASM=../circuits/commitment/commitment_js/commitment.wasm
# Path to circuit proving key
ZK_CIRCUIT_ZKEY=../circuits/commitment/commitment_final.zkey
# Groth16 verifier contract address
ZK_VERIFIER_ADDRESS=0xYourVerifierAddress
